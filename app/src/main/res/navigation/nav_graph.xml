<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.movies.data.fragments.MovieListFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_mainFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movies.data.fragments.MovieDetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="name"
            app:argType="string"/>
        <argument
            android:name="release_date"
            app:argType="string"/>
        <argument
            android:name="count"
            app:argType="integer"/>
        <argument
            android:name="average"
            app:argType="float"/>
        <argument
            android:name="overview"
            app:argType="string"/>
        <argument
            android:name="poster"
            app:argType="string"/>
    </fragment>

</navigation>